
{
  "name": "skillmint-frontend",
  "version": "1.0.0",
  "description": "SkillMint - Decentralized Skill-Based Micro-Learning Marketplace",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\""
  },
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^3.0.2",
    "@stacks/auth": "^6.13.1",
    "@stacks/blockchain-api-client": "^7.3.2",
    "@stacks/common": "^6.12.0",
    "@stacks/connect": "^7.7.1",
    "@stacks/connect-ui": "^6.4.1",
    "@stacks/network": "^6.11.3",
    "@stacks/transactions": "^6.11.1",
    "@stacks/wallet-sdk": "^6.13.0",
    "@types/node": "^22.15.18",
    "chokidar-cli": "^3.0.0",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.13",
    "vitest": "^3.1.3",
    "vitest-environment-clarinet": "^2.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3",
    "vite": "^6.0.1"
  }
}
